server default {
listen {
        type = auth
        ipaddr = *
        port = 0
        limit {
              max_connections = 16
              lifetime = 0
              idle_timeout = 30
        }
}
listen {
        ipaddr = *
        port = 0
        type = acct
        limit {
        }
}
listen {
        type = auth
        ipv6addr = ::
        port = 0
        limit {
              max_connections = 16
              lifetime = 0
              idle_timeout = 30
        }
}
listen {
        ipv6addr = ::
        port = 0
        type = acct
        limit {
        }
}
authorize {
        #Rewrite username sytax
	filter_username

	#Rewrite calling station id syntax
	rewrite_calling_station_id

	#
	#	IF User has Hardware Limitation ENABLED
	#   Checks if Radius Client is associatied with the client username
	#  See policy.d/filter_hw_address for the definition of the filter_hw_address policy.
	#
	filter_hw_address

	#
	#  The chap module will set 'Auth-Type := CHAP' if we are
	#  handling a CHAP request and Auth-Type has not already been set
	chap

        eap {
                ok = return
        }

	#
	#	IF Username EXISTS
	#   Sets password field to pass to CHAP
	#
	check_username
        
}
authenticate {
        Auth-Type PAP {
                pap
        }
        eap
}
preacct {
        preprocess
        acct_unique
        suffix
}
accounting {
        detail
        sql
        exec
        attr_filter.accounting_response
}
session {
        sql
}
post-auth {
        update {
                &reply: += &session-state:
        }
        sql
        exec
        remove_reply_message_if_eap
        Post-Auth-Type REJECT {
                sql
                attr_filter.access_reject
                eap
                remove_reply_message_if_eap
        }
}
post-proxy {
        eap
}
}
